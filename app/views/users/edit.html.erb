<h1>User info</h1>
<!--今ログインしてる人本人の名前を変更する-->
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:""%>
  <%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">Image</label>
  <%= f.attachment_field @user,:profile_image_id, placeholder: "プロフィール画像" %>
<% end %>

