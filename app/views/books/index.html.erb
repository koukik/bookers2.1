<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/info', user: @user %>
      <%= render 'books/info', book: @book %>
    </div>
    <div class="col-lg-8">
      <table class="table table-striped">
        <h1>Books</h1>
        <% @books.each do |book| %>
        <div>
          <%= attachment_image_tag @user, :profile_image_id, :fill, 10, 10, fallback: "no_image.jpg"%>

        　<!--↑画像の投稿はしない
        　でも画像の編集はできる-->
          <p>Title</p>
          <!--↓ここの記載間違えてるかも-->
          <span><%=link_to book.title, book_path(book.id) %></span>
          <!--↓直訳したら意見-->
          <!--↓多分カリキュラムで言うと本文-->
          <p>Opinion</p>
          <span><%= book.body %></span>
        </div>
        <% end %>
      </table>
    </div>
  </div>
</div>