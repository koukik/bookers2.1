<% if @user.id == current_user.id %>
  <p><%= link_to "編集", edit_user_path(@user) %></p>
<% end %>
<h2>New book</h2>
<%= form_with model:book,url:'/books',local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit'Creat Book' %>
<% end %>